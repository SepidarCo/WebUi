@model Sepidar.Admin.Models.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AdminPanel - </title>

    <link href="\Styles\ThirdParties\bootstrap\bootstrap.css" rel="stylesheet" />
    <link href="\Styles\ThirdParties\bootstrap\all.css" rel="stylesheet" />
    <link rel="stylesheet" href="\Styles\Admin.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="navbar-brand"></div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">

            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">

                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post))
                    {
                        <div>
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(x => x.ReturnUrl)
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group text-center">
                                <div class="h1">
                                    <span class="fa fa-user"></span>
                                </div>
                            </div>
                            <div class="col-md-12 form-group">
                                @Html.TextBoxFor(x => x.Username, new { @class = "form-control text-center", @placeholder = "Username" })
                            </div>
                            <div class="col-md-12 form-group">
                                @Html.PasswordFor(x => x.Password, new { @class = "form-control text-center", @placeholder = "Password" })
                            </div>
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-info w-100">Login</button>

                                @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
                            </div>
                        </div>
                    }

                </div>
            </div>

        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            Copyright &copy; <a href="http://punkace.com">PUNKACE</a>
        </div>
    </footer>

    <script src="\Scripts\ThirdParties\jquery\jquery-3.5.1.js"></script>
    <script src="\Scripts\ThirdParties\bootstrap\js\bootstrap.js"></script>
    <script src="\Scripts\ThirdParties\fontawesome\all.js"></script>
    <script src="\Scripts\Site.js" asp-append-version="true"></script>

</body>
</html>
